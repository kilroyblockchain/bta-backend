{
    "name": "flo-api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:migrate": "node dist/flo-migrations/migrate.js",
        "start:migrate:prefill": "node dist/super-admin-migrations/migrate.js",
        "start:prod": "nest build && npm run start:migrate &&  node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prettier:check": "prettier --config .prettierrc --loglevel 'warn' --check \"src/**/*.{ts,css,scss,html,json}\"",
        "prettier:write": "prettier --config .prettierrc --loglevel 'warn' --write \"src/**/*.{ts,css,scss,html,json}\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^1.6.1",
        "@nestjs/axios": "^0.0.7",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.2.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mongoose": "^9.0.2",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.4.0",
        "@nestjs/schedule": "^1.0.2",
        "@nestjs/swagger": "^5.2.0",
        "@types/mongoose-paginate": "^5.0.11",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cookie-parser": "^1.4.6",
        "crypto-js": "^4.1.1",
        "cryptr": "^6.0.2",
        "date-fns": "^2.28.0",
        "dotenv": "^16.0.0",
        "express-rate-limit": "^6.3.0",
        "fast-safe-stringify": "^2.1.1",
        "handlebars": "^4.7.7",
        "helmet": "^5.0.2",
        "migrate-mongoose": "^4.0.0",
        "mongoose": "^6.2.4",
        "mongoose-paginate": "^5.0.3",
        "multistream": "^4.1.0",
        "nest-winston": "^1.6.2",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "path": "^0.12.7",
        "pre-commit": "^1.2.2",
        "reflect-metadata": "^0.1.13",
        "request-ip": "^2.1.3",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.3.0",
        "winston": "^3.7.2",
        "winston-daily-rotate-file": "^4.6.1"
    },
    "pre-commit": [
        "lint"
    ],
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "27.4.1",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.2.5",
        "jira-prepare-commit-msg": "^1.6.2",
        "prettier": "^2.5.1",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5",
        "validate-branch-name": "^1.3.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "validate-branch-name": {
        "pattern": "^(feature|bugfix|hotfix)/(FLO-).+$",
        "errorMsg": "Branch name should have proper pattern"
    },
    "jira-prepare-commit-msg": {
        "messagePattern": "[$J]: $M",
        "jiraTicketPattern": "([A-Z]+-\\d+)",
        "commentChar": "#",
        "isConventionalCommit": false,
        "allowEmptyCommitMessage": false,
        "gitRoot": ""
    }
}
